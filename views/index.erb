<% flash.keys.each do |type| %>
  <div data-alert class="flash <%= type %> alert-box radius">
    <%= flash[type] %>
  </div>
<% end %>

<h1> Welcome <%= @username %> </h1>
<% @chitter.each do |chitter_object| %>

<h1> <%= chitter_object.message %> </h1>
<br> Posted by <%= chitter_object.username %>  (<%= chitter_object.posted_by %>) at <br> <%= chitter_object.created_at %> </br>
 <% end %>

 <form action="/peep/new" method = "get">
  <input type="submit" value="add">
</form>
